<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/AppTheme"
    tools:context=".activity.SettingsActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_sources_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/location_sources_label" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fused_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/fused_checkbox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fused_last_known_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/fused_last_known_checkbox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/system_gps_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/system_gps_checkbox" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/system_gps_last_known_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@string/system_gps_last_known_checkbox" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>
